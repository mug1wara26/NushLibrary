<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RadioGroup
        android:id="@+id/reorder_radio_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <RadioButton
            android:id="@+id/reorder_due_date_ascending"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/due_date_ascending"/>

        <RadioButton
            android:id="@+id/reorder_due_date_descending"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/due_date_descending"/>

        <RadioButton
            android:id="@+id/reorder_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/title"/>
    </RadioGroup>

</androidx.constraintlayout.widget.ConstraintLayout>