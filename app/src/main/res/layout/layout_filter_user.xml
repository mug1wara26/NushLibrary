<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:id="@+id/layout_filter_user"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:visibility="gone">

    <CheckBox
        android:id="@+id/borrowed_books_checked_box"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/borrowed_books"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <CheckBox
        android:id="@+id/to_read_checked_box"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/to_read_list"
        app:layout_constraintTop_toBottomOf="@id/borrowed_books_checked_box"
        app:layout_constraintStart_toStartOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>